<?xml version="1.0" encoding="utf-8" ?>
<Window x:Class="Bucket.Updater.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:dev="using:DevWinUI"
        xmlns:local="using:Bucket.Updater"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TitleBar x:Name="AppTitleBar"
                  Title="{x:Bind dev:ProcessInfoHelper.ProductName}"
                  Subtitle="{x:Bind dev:ProcessInfoHelper.VersionWithPrefix}">
            <!--  Temporary Fix TitleBar Icon  -->
            <TitleBar.LeftHeader>
                <ImageIcon Width="16"
                           Height="16"
                           Margin="2,0,14,0"
                           Source="ms-appx:///Assets/AppIcon.png" />
            </TitleBar.LeftHeader>
        </TitleBar>
        <StackPanel Grid.Row="1">

        </StackPanel>
    </Grid>
</Window>

