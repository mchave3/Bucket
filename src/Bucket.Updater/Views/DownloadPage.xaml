<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Bucket.Updater.Views.DownloadPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dev="using:DevWinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,32"
            HorizontalAlignment="Center"
            Spacing="8">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="28"
                FontWeight="Bold"
                Text="{x:Bind ViewModel.HeaderText, Mode=OneWay}" />
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="16"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Text="{x:Bind ViewModel.UpdateVersion, Mode=OneWay}" />
        </StackPanel>

        <!--  Download Content (Centered)  -->
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="32">

            <!--  Progress Ring  -->
            <dev:ProgressRing
                Width="64"
                Height="64"
                HorizontalAlignment="Center"
                IsActive="{x:Bind ViewModel.IsProgressActive, Mode=OneWay}" />

            <!--  Progress Bar  -->
            <ProgressBar
                Width="350"
                HorizontalAlignment="Center"
                Maximum="100"
                Minimum="0"
                Value="{x:Bind ViewModel.ProgressPercentage, Mode=OneWay}" />

            <!--  Status Text  -->
            <StackPanel HorizontalAlignment="Center" Spacing="8">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                    TextAlignment="Center" />

                <!--  Download specific info  -->
                <StackPanel
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="8">
                    <TextBlock Text="{x:Bind ViewModel.DownloadedSize, Mode=OneWay}" />
                    <TextBlock Text="/" />
                    <TextBlock Text="{x:Bind ViewModel.TotalSize, Mode=OneWay}" />
                </StackPanel>

                <TextBlock
                    HorizontalAlignment="Center"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="{x:Bind ViewModel.DownloadSpeed, Mode=OneWay}" />
            </StackPanel>


        </StackPanel>

    </Grid>
</Page>