<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="Bucket.Updater.Views.DownloadPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8" HorizontalAlignment="Center">
            <TextBlock Text="Downloading Update" 
                       FontSize="28" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center" />
            <TextBlock Text="{x:Bind ViewModel.UpdateVersion, Mode=OneWay}"
                       FontSize="16"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       HorizontalAlignment="Center" />
        </StackPanel>

        <!-- Download Progress -->
        <dev:Card Grid.Row="1" 
                  Margin="0,32,0,0" 
                  Padding="32"
                  VerticalAlignment="Center">
            <StackPanel Spacing="24">
                <!-- Progress Ring -->
                <StackPanel HorizontalAlignment="Center" Spacing="16">
                    <dev:ProgressRing IsActive="{x:Bind ViewModel.IsDownloading, Mode=OneWay}"
                                      Width="64" 
                                      Height="64" />
                    
                    <FontIcon Glyph="&#xE73E;" 
                              FontSize="64"
                              Foreground="{ThemeResource SystemFillColorSuccessBrush}" />
                    
                    <FontIcon Glyph="&#xE783;" 
                              FontSize="64"
                              Foreground="{ThemeResource SystemFillColorCriticalBrush}" />
                </StackPanel>

                <!-- Progress Bar -->
                <ProgressBar Value="{x:Bind ViewModel.ProgressPercentage, Mode=OneWay}"
                             Minimum="0"
                             Maximum="100" />

                <!-- Progress Text -->
                <StackPanel Spacing="8" HorizontalAlignment="Center">
                    <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" 
                               FontSize="16"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center" />
                    
                    <StackPanel Orientation="Horizontal" 
                                Spacing="8"
                                HorizontalAlignment="Center">
                        <TextBlock Text="{x:Bind ViewModel.DownloadedSize, Mode=OneWay}" />
                        <TextBlock Text="/" />
                        <TextBlock Text="{x:Bind ViewModel.TotalSize, Mode=OneWay}" />
                    </StackPanel>
                    
                    <TextBlock Text="{x:Bind ViewModel.DownloadSpeed, Mode=OneWay}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               HorizontalAlignment="Center" />
                </StackPanel>

                <!-- Error Details -->
                <InfoBar IsOpen="{x:Bind ViewModel.HasError, Mode=OneWay}"
                         Severity="Error"
                         Title="Download Failed"
                         Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                         IsClosable="False" />
            </StackPanel>
        </dev:Card>

        <!-- Navigation Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Spacing="12" 
                    Margin="0,24,0,0">
            <Button x:Name="BackButton"
                    Content="Back"
                    Command="{x:Bind ViewModel.BackCommand}"
                    IsEnabled="{x:Bind ViewModel.CanGoBack, Mode=OneWay}" />
            
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Command="{x:Bind ViewModel.CancelCommand}" />
            
            <Button x:Name="RetryButton"
                    Content="Retry"
                    Command="{x:Bind ViewModel.RetryCommand}"
                    Style="{ThemeResource AccentButtonStyle}" />
            
            <Button x:Name="InstallButton"
                    Content="Install Now"
                    Command="{x:Bind ViewModel.InstallCommand}"
                    Style="{ThemeResource AccentButtonStyle}" />
        </StackPanel>
    </Grid>
</Page>