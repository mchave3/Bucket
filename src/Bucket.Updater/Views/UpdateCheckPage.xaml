<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="Bucket.Updater.Views.UpdateCheckPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8" HorizontalAlignment="Center">
            <TextBlock Text="{x:Bind ViewModel.HeaderText, Mode=OneWay}" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" />
            <TextBlock Text="{x:Bind ViewModel.SubHeaderText, Mode=OneWay}"
                       FontSize="16"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       HorizontalAlignment="Center"
                       Visibility="{x:Bind ViewModel.SubHeaderVisibility, Mode=OneWay}" />
        </StackPanel>

        <!-- Content -->
        <dev:Card Grid.Row="1" 
                  Margin="0,32,0,0" 
                  Padding="24"
                  VerticalAlignment="Center">
            <StackPanel Spacing="20">
                <!-- Current Version -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Current Version" FontWeight="SemiBold" />
                    <TextBlock Text="{x:Bind ViewModel.CurrentVersion, Mode=OneWay}" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>

                <!-- New Version (if available) -->
                <StackPanel Spacing="8" Visibility="{x:Bind ViewModel.NewVersionVisibility, Mode=OneWay}">
                    <TextBlock Text="New Version" FontWeight="SemiBold" />
                    <TextBlock Text="{x:Bind ViewModel.NewVersion, Mode=OneWay}" 
                               Foreground="{ThemeResource SystemFillColorSuccessBrush}" />
                </StackPanel>

                <!-- Update Channel -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Update Channel" FontWeight="SemiBold" />
                    <TextBlock Text="{x:Bind ViewModel.UpdateChannel, Mode=OneWay}" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>

                <!-- Architecture -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Architecture" FontWeight="SemiBold" />
                    <TextBlock Text="{x:Bind ViewModel.Architecture, Mode=OneWay}" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>

                <!-- Status -->
                <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                        CornerRadius="8"
                        Padding="16"
                        Margin="0,16,0,0">
                    <StackPanel Spacing="12">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <dev:ProgressRing IsActive="{x:Bind ViewModel.IsChecking, Mode=OneWay}"
                                              Width="20" Height="20" />
                            <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" 
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </dev:Card>

        <!-- Navigation Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Spacing="12" 
                    Margin="0,24,0,0">
            <Button x:Name="CloseButton"
                    Content="Close"
                    Command="{x:Bind ViewModel.CloseCommand}" />
            <Button x:Name="CheckButton"
                    Content="Check for Updates"
                    Command="{x:Bind ViewModel.CheckUpdatesCommand}"
                    IsEnabled="{x:Bind ViewModel.CanCheckUpdates, Mode=OneWay}"
                    Visibility="{x:Bind ViewModel.CheckButtonVisibility, Mode=OneWay}"
                    Style="{ThemeResource AccentButtonStyle}" />
            <Button x:Name="DownloadInstallButton"
                    Content="Download &amp; Install"
                    Command="{x:Bind ViewModel.DownloadInstallCommand}"
                    IsEnabled="{x:Bind ViewModel.CanDownloadInstall, Mode=OneWay}"
                    Visibility="{x:Bind ViewModel.DownloadInstallButtonVisibility, Mode=OneWay}"
                    Style="{ThemeResource AccentButtonStyle}" />
        </StackPanel>
    </Grid>
</Page>