<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Bucket.Updater.Views.UpdateCheckPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dev="using:DevWinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel
            Grid.Row="0"
            HorizontalAlignment="Center"
            Spacing="8"
            Height="90">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="28"
                FontWeight="Bold"
                Text="{x:Bind ViewModel.HeaderText, Mode=OneWay}" />
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="16"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Text="{x:Bind ViewModel.SubHeaderText, Mode=OneWay}"
                Visibility="{x:Bind ViewModel.SubHeaderVisibility, Mode=OneWay}" />
        </StackPanel>

        <!--  Content  -->
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="32">

            <!--  Version Information  -->
            <StackPanel HorizontalAlignment="Center" Spacing="20">
                <!--  Current Version  -->
                <StackPanel HorizontalAlignment="Center" Spacing="2">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="13"
                        Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                        Text="Current Version" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="24"
                        FontWeight="SemiBold"
                        Text="{x:Bind ViewModel.CurrentVersion, Mode=OneWay}" />
                </StackPanel>

                <!--  New Version (if available)  -->
                <StackPanel
                    HorizontalAlignment="Center"
                    Spacing="2"
                    Visibility="{x:Bind ViewModel.NewVersionVisibility, Mode=OneWay}">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="13"
                        Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                        Text="New Version Available" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="24"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                        Text="{x:Bind ViewModel.NewVersion, Mode=OneWay}" />
                </StackPanel>

                <!--  Additional Info  -->
                <StackPanel
                    Margin="0,8,0,0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="24">
                    <StackPanel HorizontalAlignment="Center" Spacing="1">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="14"
                            Text="{x:Bind ViewModel.UpdateChannel, Mode=OneWay}" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="11"
                            Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                            Text="Channel" />
                    </StackPanel>

                    <Rectangle
                        Width="1"
                        Height="24"
                        Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                    <StackPanel HorizontalAlignment="Center" Spacing="1">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="14"
                            Text="{x:Bind ViewModel.Architecture, Mode=OneWay}" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="11"
                            Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                            Text="Architecture" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!--  Status  -->
            <StackPanel
                Margin="0,8,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <dev:ProgressRing
                    Width="16"
                    Height="16"
                    IsActive="{x:Bind ViewModel.IsChecking, Mode=OneWay}" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="14"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" />
            </StackPanel>
        </StackPanel>

        <!--  Navigation Buttons  -->
        <StackPanel
            Grid.Row="2"
            Margin="0,24,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal"
            Spacing="12">
            <Button
                x:Name="CloseButton"
                Command="{x:Bind ViewModel.CloseCommand}"
                Content="Close" />
            <Button
                x:Name="CheckButton"
                Command="{x:Bind ViewModel.CheckUpdatesCommand}"
                Content="Check for Updates"
                IsEnabled="{x:Bind ViewModel.CanCheckUpdates, Mode=OneWay}"
                Style="{ThemeResource AccentButtonStyle}"
                Visibility="{x:Bind ViewModel.CheckButtonVisibility, Mode=OneWay}" />
            <Button
                x:Name="DownloadInstallButton"
                Command="{x:Bind ViewModel.DownloadInstallCommand}"
                Content="Download &amp; Install"
                IsEnabled="{x:Bind ViewModel.CanDownloadInstall, Mode=OneWay}"
                Style="{ThemeResource AccentButtonStyle}"
                Visibility="{x:Bind ViewModel.DownloadInstallButtonVisibility, Mode=OneWay}" />
        </StackPanel>
    </Grid>
</Page>