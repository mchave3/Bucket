<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="Bucket.Updater.Views.DownloadInstallPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8" HorizontalAlignment="Center">
            <TextBlock Text="{x:Bind ViewModel.HeaderText, Mode=OneWay}" 
                       FontSize="28" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center" />
            <TextBlock Text="{x:Bind ViewModel.UpdateVersion, Mode=OneWay}"
                       FontSize="16"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       HorizontalAlignment="Center" />
        </StackPanel>

        <!-- Progress Content -->
        <dev:Card Grid.Row="1" 
                  Margin="0,32,0,0" 
                  Padding="32"
                  VerticalAlignment="Center">
            <StackPanel Spacing="24">
                <!-- Progress Icon -->
                <StackPanel HorizontalAlignment="Center" Spacing="16">
                    <!-- Download/Install Progress Ring -->
                    <dev:ProgressRing IsActive="{x:Bind ViewModel.IsProgressActive, Mode=OneWay}"
                                      Width="64" 
                                      Height="64"
                                      Visibility="{x:Bind ViewModel.ProgressRingVisibility, Mode=OneWay}" />
                    
                    <!-- Success Icon -->
                    <FontIcon Glyph="&#xE73E;" 
                              FontSize="64"
                              Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                              Visibility="{x:Bind ViewModel.SuccessIconVisibility, Mode=OneWay}" />
                    
                    <!-- Error Icon -->
                    <FontIcon Glyph="&#xE783;" 
                              FontSize="64"
                              Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                              Visibility="{x:Bind ViewModel.ErrorIconVisibility, Mode=OneWay}" />
                </StackPanel>

                <!-- Progress Bar (for download) -->
                <ProgressBar Value="{x:Bind ViewModel.ProgressPercentage, Mode=OneWay}"
                             Minimum="0"
                             Maximum="100"
                             Visibility="{x:Bind ViewModel.ProgressBarVisibility, Mode=OneWay}" />

                <!-- Status Text -->
                <StackPanel Spacing="8" HorizontalAlignment="Center">
                    <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" 
                               FontSize="18"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               TextAlignment="Center" />
                    
                    <!-- Download specific info -->
                    <StackPanel Orientation="Horizontal" 
                                Spacing="8"
                                HorizontalAlignment="Center"
                                Visibility="{x:Bind ViewModel.DownloadInfoVisibility, Mode=OneWay}">
                        <TextBlock Text="{x:Bind ViewModel.DownloadedSize, Mode=OneWay}" />
                        <TextBlock Text="/" />
                        <TextBlock Text="{x:Bind ViewModel.TotalSize, Mode=OneWay}" />
                    </StackPanel>
                    
                    <TextBlock Text="{x:Bind ViewModel.DownloadSpeed, Mode=OneWay}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Visibility="{x:Bind ViewModel.DownloadInfoVisibility, Mode=OneWay}" />
                </StackPanel>

                <!-- Installation Log -->
                <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                        CornerRadius="8"
                        Padding="16"
                        Visibility="{x:Bind ViewModel.InstallLogVisibility, Mode=OneWay}">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Installation Details" 
                                   FontWeight="SemiBold" />
                        
                        <ScrollViewer MaxHeight="120"
                                      VerticalScrollBarVisibility="Auto"
                                      ZoomMode="Disabled">
                            <TextBlock Text="{x:Bind ViewModel.InstallationLog, Mode=OneWay}"
                                       TextWrapping="Wrap"
                                       FontFamily="Consolas"
                                       FontSize="12"
                                       IsTextSelectionEnabled="True" />
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Success Message -->
                <InfoBar IsOpen="{x:Bind ViewModel.IsCompleted, Mode=OneWay}"
                         Severity="Success"
                         Title="Installation Completed"
                         Message="The update has been installed successfully. Please restart the application to use the new version."
                         IsClosable="False" />

                <!-- Error Message -->
                <InfoBar IsOpen="{x:Bind ViewModel.HasError, Mode=OneWay}"
                         Severity="Error"
                         Title="Update Failed"
                         Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                         IsClosable="False" />
            </StackPanel>
        </dev:Card>

        <!-- Navigation Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Spacing="12" 
                    Margin="0,24,0,0">
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Command="{x:Bind ViewModel.CancelCommand}"
                    Visibility="{x:Bind ViewModel.CancelButtonVisibility, Mode=OneWay}" />
            
            <Button x:Name="RetryButton"
                    Content="Retry"
                    Command="{x:Bind ViewModel.RetryCommand}"
                    Style="{ThemeResource AccentButtonStyle}"
                    Visibility="{x:Bind ViewModel.RetryButtonVisibility, Mode=OneWay}" />
            
            <Button x:Name="FinishButton"
                    Content="Finish"
                    Command="{x:Bind ViewModel.FinishCommand}"
                    Style="{ThemeResource AccentButtonStyle}"
                    Visibility="{x:Bind ViewModel.FinishButtonVisibility, Mode=OneWay}" />
        </StackPanel>
    </Grid>
</Page>