<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="Bucket.Updater.Views.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="16" HorizontalAlignment="Center">
            <Image Width="64" Height="64" Source="ms-appx:///Assets/AppIcon.png" />
            <TextBlock Text="Welcome to Bucket Updater" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" />
            <TextBlock Text="Keep your Bucket application up to date"
                       FontSize="16"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       HorizontalAlignment="Center" />
        </StackPanel>

        <!-- Content -->
        <dev:Card Grid.Row="1" 
                  Margin="0,32,0,0" 
                  Padding="24"
                  VerticalAlignment="Center">
            <StackPanel Spacing="20">
                <StackPanel Spacing="8">
                    <TextBlock Text="Current Version" FontWeight="SemiBold" />
                    <TextBlock Text="{x:Bind ViewModel.CurrentVersion, Mode=OneWay}" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>

                <StackPanel Spacing="8">
                    <TextBlock Text="Update Channel" FontWeight="SemiBold" />
                    <ComboBox x:Name="UpdateChannelComboBox"
                              SelectedIndex="{x:Bind ViewModel.SelectedChannelIndex, Mode=TwoWay}"
                              HorizontalAlignment="Stretch">
                        <ComboBoxItem Content="Release" />
                        <ComboBoxItem Content="Nightly" />
                    </ComboBox>
                </StackPanel>

                <StackPanel Spacing="8">
                    <TextBlock Text="Architecture" FontWeight="SemiBold" />
                    <TextBlock Text="{x:Bind ViewModel.Architecture, Mode=OneWay}" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>

                <!-- Status -->
                <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                        CornerRadius="8"
                        Padding="16"
                        Margin="0,16,0,0">
                    <StackPanel Spacing="12">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <dev:ProgressRing IsActive="{x:Bind ViewModel.IsChecking, Mode=OneWay}"
                                              Width="20" Height="20" />
                            <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" 
                                       VerticalAlignment="Center" />
                        </StackPanel>
                        
                        <InfoBar x:Name="UpdateInfoBar"
                                 IsOpen="{x:Bind ViewModel.HasUpdate, Mode=OneWay}"
                                 Severity="Success"
                                 Title="Update Available"
                                 Message="{x:Bind ViewModel.UpdateMessage, Mode=OneWay}"
                                 IsClosable="False" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </dev:Card>

        <!-- Navigation Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Spacing="12" 
                    Margin="0,24,0,0">
            <Button x:Name="CheckUpdateButton"
                    Content="Check for Updates"
                    Command="{x:Bind ViewModel.CheckUpdatesCommand}"
                    IsEnabled="{x:Bind ViewModel.CanCheckUpdates, Mode=OneWay}"
                    Style="{ThemeResource AccentButtonStyle}" />
            <Button x:Name="NextButton"
                    Content="Next"
                    Command="{x:Bind ViewModel.NextCommand}"
                    IsEnabled="{x:Bind ViewModel.HasUpdate, Mode=OneWay}" />
        </StackPanel>
    </Grid>
</Page>