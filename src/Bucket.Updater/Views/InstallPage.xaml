<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="Bucket.Updater.Views.InstallPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8" HorizontalAlignment="Center">
            <TextBlock Text="Installing Update" 
                       FontSize="28" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center" />
            <TextBlock Text="{x:Bind ViewModel.UpdateVersion, Mode=OneWay}"
                       FontSize="16"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       HorizontalAlignment="Center" />
        </StackPanel>

        <!-- Installation Progress -->
        <dev:Card Grid.Row="1" 
                  Margin="0,32,0,0" 
                  Padding="32"
                  VerticalAlignment="Center">
            <StackPanel Spacing="24">
                <!-- Progress Icon -->
                <StackPanel HorizontalAlignment="Center" Spacing="16">
                    <dev:ProgressRing IsActive="{x:Bind ViewModel.IsInstalling, Mode=OneWay}"
                                      Width="64" 
                                      Height="64" />
                    
                    <FontIcon Glyph="&#xE73E;" 
                              FontSize="64"
                              Foreground="{ThemeResource SystemFillColorSuccessBrush}" />
                    
                    <FontIcon Glyph="&#xE783;" 
                              FontSize="64"
                              Foreground="{ThemeResource SystemFillColorCriticalBrush}" />
                </StackPanel>

                <!-- Status Message -->
                <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" 
                           FontSize="18"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           TextAlignment="Center" />

                <!-- Installation Details -->
                <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                        CornerRadius="8"
                        Padding="16">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Installation Details" 
                                   FontWeight="SemiBold" />
                        
                        <ScrollViewer MaxHeight="120"
                                      VerticalScrollBarVisibility="Auto"
                                      ZoomMode="Disabled">
                            <TextBlock Text="{x:Bind ViewModel.InstallationLog, Mode=OneWay}"
                                       TextWrapping="Wrap"
                                       FontFamily="Consolas"
                                       FontSize="12"
                                       IsTextSelectionEnabled="True" />
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Success Message -->
                <InfoBar IsOpen="{x:Bind ViewModel.IsCompleted, Mode=OneWay}"
                         Severity="Success"
                         Title="Installation Completed"
                         Message="The update has been installed successfully. Please restart the application to use the new version."
                         IsClosable="False" />

                <!-- Error Message -->
                <InfoBar IsOpen="{x:Bind ViewModel.HasError, Mode=OneWay}"
                         Severity="Error"
                         Title="Installation Failed"
                         Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                         IsClosable="False" />

                <!-- Warning Message -->
                <InfoBar IsOpen="{x:Bind ViewModel.ShowRestartWarning, Mode=OneWay}"
                         Severity="Informational"
                         Title="Restart Required"
                         Message="A system restart may be required to complete the installation."
                         IsClosable="False" />
            </StackPanel>
        </dev:Card>

        <!-- Navigation Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Spacing="12" 
                    Margin="0,24,0,0">
            <Button x:Name="BackButton"
                    Content="Back"
                    Command="{x:Bind ViewModel.BackCommand}"
                    IsEnabled="{x:Bind ViewModel.CanGoBack, Mode=OneWay}" />
            
            <Button x:Name="RetryButton"
                    Content="Retry Installation"
                    Command="{x:Bind ViewModel.RetryCommand}"
                    Style="{ThemeResource AccentButtonStyle}" />
            
            <Button x:Name="FinishButton"
                    Content="Finish"
                    Command="{x:Bind ViewModel.FinishCommand}"
                    Style="{ThemeResource AccentButtonStyle}" />
        </StackPanel>
    </Grid>
</Page>