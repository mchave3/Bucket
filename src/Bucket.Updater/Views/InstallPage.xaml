<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="Bucket.Updater.Views.InstallPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8" HorizontalAlignment="Center" Margin="0,0,0,32">
            <TextBlock Text="{x:Bind ViewModel.HeaderText, Mode=OneWay}" 
                       FontSize="28" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center" />
            <TextBlock Text="{x:Bind ViewModel.UpdateVersion, Mode=OneWay}"
                       FontSize="16"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       HorizontalAlignment="Center" />
        </StackPanel>

        <!-- Install Content (Centered) -->
        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Spacing="32"
                    MaxWidth="700">
            
            <!-- Status Icon -->
            <StackPanel HorizontalAlignment="Center" 
                        Spacing="16">
                <!-- Install Progress Ring -->
                <dev:ProgressRing IsActive="{x:Bind ViewModel.IsProgressActive, Mode=OneWay}"
                                  Width="64" 
                                  Height="64"
                                  Visibility="{x:Bind ViewModel.ProgressRingVisibility, Mode=OneWay}" />
                
                <!-- Success Icon -->
                <FontIcon Glyph="&#xE73E;" 
                          FontSize="64"
                          Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                          Visibility="{x:Bind ViewModel.SuccessIconVisibility, Mode=OneWay}" />
                
                <!-- Error Icon -->
                <FontIcon Glyph="&#xE783;" 
                          FontSize="64"
                          Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                          Visibility="{x:Bind ViewModel.ErrorIconVisibility, Mode=OneWay}" />
            </StackPanel>

            <!-- Status Text -->
            <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" 
                       FontSize="18"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       TextAlignment="Center" />

            <!-- Installation Logs (Expandable) -->
            <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                    CornerRadius="8"
                    Padding="16"
                    MinHeight="200"
                    MaxHeight="400"
                    HorizontalAlignment="Stretch"
                    Visibility="{x:Bind ViewModel.LogsVisibility, Mode=OneWay}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0"
                               Text="Installation Details" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,12" />
                    
                    <ScrollViewer Grid.Row="1"
                                  x:Name="LogScrollViewer"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  ZoomMode="Disabled">
                        <TextBlock Text="{x:Bind ViewModel.InstallationLog, Mode=OneWay}"
                                   TextWrapping="Wrap"
                                   FontFamily="Consolas"
                                   FontSize="12"
                                   IsTextSelectionEnabled="True" />
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Success/Error Messages -->
            <StackPanel Spacing="12"
                        HorizontalAlignment="Stretch">
                <!-- Success Message -->
                <InfoBar IsOpen="{x:Bind ViewModel.IsCompleted, Mode=OneWay}"
                         Severity="Success"
                         Title="Installation Completed"
                         Message="The update has been installed successfully. Please restart the application to use the new version."
                         IsClosable="False" />

                <!-- Error Message -->
                <InfoBar IsOpen="{x:Bind ViewModel.HasError, Mode=OneWay}"
                         Severity="Error"
                         Title="Update Failed"
                         Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                         IsClosable="False" />
            </StackPanel>

        </StackPanel>

        <!-- Navigation Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Spacing="12" 
                    Margin="0,24,0,0">
            
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Command="{x:Bind ViewModel.CancelCommand}"
                    Visibility="{x:Bind ViewModel.CancelButtonVisibility, Mode=OneWay}" />
            
            <Button x:Name="RetryButton"
                    Content="Retry"
                    Command="{x:Bind ViewModel.RetryCommand}"
                    Style="{ThemeResource AccentButtonStyle}"
                    Visibility="{x:Bind ViewModel.RetryButtonVisibility, Mode=OneWay}" />
            
            <Button x:Name="FinishButton"
                    Content="Finish"
                    Command="{x:Bind ViewModel.FinishCommand}"
                    Style="{ThemeResource AccentButtonStyle}"
                    Visibility="{x:Bind ViewModel.FinishButtonVisibility, Mode=OneWay}" />
                    
        </StackPanel>

    </Grid>
</Page>