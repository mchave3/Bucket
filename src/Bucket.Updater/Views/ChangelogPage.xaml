<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="Bucket.Updater.Views.ChangelogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8">
            <TextBlock Text="What's New" 
                       FontSize="28" 
                       FontWeight="Bold" />
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Version:" FontWeight="SemiBold" />
                <TextBlock Text="{x:Bind ViewModel.UpdateVersion, Mode=OneWay}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Release Date:" FontWeight="SemiBold" />
                <TextBlock Text="{x:Bind ViewModel.ReleaseDate, Mode=OneWay}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="File Size:" FontWeight="SemiBold" />
                <TextBlock Text="{x:Bind ViewModel.FileSize, Mode=OneWay}" />
            </StackPanel>
        </StackPanel>

        <!-- Changelog Content -->
        <dev:Card Grid.Row="1" 
                  Margin="0,24,0,0" 
                  Padding="0"
                  VerticalAlignment="Stretch">
            <ScrollViewer ZoomMode="Disabled" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="24">
                <StackPanel Spacing="16">
                    <TextBlock Text="Release Notes" 
                               FontSize="20" 
                               FontWeight="SemiBold" />
                    
                    <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                            CornerRadius="8"
                            Padding="16">
                        <TextBlock Text="{x:Bind ViewModel.ChangelogText, Mode=OneWay}"
                                   TextWrapping="Wrap"
                                   IsTextSelectionEnabled="True"
                                   FontFamily="Consolas"
                                   FontSize="14"
                                   LineHeight="20" />
                    </Border>

                    <!-- Update Details -->
                    <StackPanel Spacing="12">
                        <TextBlock Text="Update Details" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" />
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Channel:" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,12,6" />
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                       Text="{x:Bind ViewModel.UpdateChannel, Mode=OneWay}"
                                       Margin="0,0,0,6" />

                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Architecture:" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,12,6" />
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                       Text="{x:Bind ViewModel.Architecture, Mode=OneWay}"
                                       Margin="0,0,0,6" />

                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="Type:" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,12,0" />
                            <TextBlock Grid.Row="2" Grid.Column="1" 
                                       Text="{x:Bind ViewModel.ReleaseType, Mode=OneWay}" />
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </dev:Card>

        <!-- Navigation Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Spacing="12" 
                    Margin="0,24,0,0">
            <Button x:Name="BackButton"
                    Content="Back"
                    Command="{x:Bind ViewModel.BackCommand}" />
            <Button x:Name="DownloadButton"
                    Content="Download Update"
                    Command="{x:Bind ViewModel.DownloadCommand}"
                    Style="{ThemeResource AccentButtonStyle}" />
        </StackPanel>
    </Grid>
</Page>