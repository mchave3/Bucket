<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="Bucket.App.Views.AboutUsSettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:Bucket.App"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:Bucket.App.Views"
      dev:BreadcrumbNavigator.IsHeaderVisible="True"
      mc:Ignorable="d">
    <ScrollView Margin="{ThemeResource ContentPageMargin}"
                Padding="{ThemeResource ContentPagePadding}"
                VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10"
                    dev:PanelAttach.ChildrenTransitions="Default"
                    Spacing="5">
            <dev:SettingsExpander x:Uid="/Settings/About_Expander"
                                  HeaderIcon="{dev:BitmapIcon Source=Assets/AppIcon.png}"
                                  IsExpanded="True">

                <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           IsTextSelectionEnabled="True"
                           Text="{x:Bind AppVersion, Mode=OneWay}" />
                <dev:SettingsExpander.Items>
                    <dev:SettingsCard HorizontalContentAlignment="Left"
                                      ContentAlignment="Left">
                        <StackPanel Orientation="Vertical"
                                    Spacing="5">
                            <TextBlock x:Uid="/Settings/About_RelatedLinks" />
                            <HyperlinkButton x:Uid="/Settings/About_SourceCode"
                                             NavigateUri="https://github.com/Ghost1372/DevWinUI" />
                            <HyperlinkButton x:Uid="/Settings/About_ReleaseNotes"
                                             NavigateUri="https://github.com/Ghost1372/DevWinUI/releases" />
                        </StackPanel>
                    </dev:SettingsCard>
                </dev:SettingsExpander.Items>
            </dev:SettingsExpander>
        </StackPanel>
    </ScrollView>
</Page>
